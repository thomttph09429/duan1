<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1C1F32"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Quiz_tienganh12_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_question_count"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:freezesText="true"
                android:paddingTop="10dp"
                android:text="câu :1/8"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dongho1" />

            <TextView
                android:id="@+id/tv_count_down"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:freezesText="true"
                android:paddingTop="5dp"
                android:text="05:40"
                android:textColor="#ffffff"
                android:textSize="20dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvquestion"
            android:layout_width="match_parent"
            android:layout_height="130dp"

            android:layout_marginBottom="30dp"
            android:background="@drawable/shape"
            android:freezesText="true"
            android:gravity="start"
            android:padding="15dp"
            android:text="1.Choose the letter A, B, C, or D to indicate the word that differs from the other three in the position of the primary stress in each of the following questions:"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="normal" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/option1"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/defaul_option"
                android:freezesText="true"
                android:padding="20dp"
                android:text="câu  trả lời " />

            <RadioButton
                android:id="@+id/option2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:background="@drawable/defaul_option"
                android:freezesText="true"
                android:padding="20dp"
                android:text="câu  trả lời " />

            <RadioButton
                android:id="@+id/option3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:background="@drawable/defaul_option"
                android:freezesText="true"
                android:padding="20dp"
                android:text="câu  trả lời " />

            <RadioButton
                android:id="@+id/option4"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/defaul_option"
                android:freezesText="true"
                android:padding="20dp"
                android:text="câu  trả lời " />
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"

        >

        <Button
            android:id="@+id/btn_confirm12"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:freezesText="true"
            android:text="Tiếp"
            android:textColor="#ffffff"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>